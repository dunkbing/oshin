    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--text-primary);
  }

  .nav-link-github {
    display: flex;
    align-items: center;
    padding: 0.5rem;
    border-radius: 6px;
    transition: background-color 0.2s;
  }

  .nav-link-github:hover {
    background: var(--bg-elevated);
  }

  /* Hero */
  .hero {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 1rem 4rem;
    text-align: center;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 600px;
    background: var(--glow-bg);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    max-width: 720px;
    margin: 0 auto 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 100px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--accent-green);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
