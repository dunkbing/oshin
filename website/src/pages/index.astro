---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Oshin — Monitor AI Coding Agents on macOS">
  <!-- Navigation -->
  <nav class="nav">
    <div class="nav-inner">
      <a href="/" class="logo">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="logo-icon">
          <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="2"/>
          <circle cx="9" cy="12" r="2" fill="currentColor"/>
          <circle cx="15" cy="12" r="2" fill="currentColor"/>
          <path d="M9 16c0 0 1.5 2 3 2s3-2 3-2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        <span>Oshin</span>
      </a>
      <div class="nav-links">
        <a href="https://github.com/dunkbing/oshin" target="_blank" class="nav-link-github">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <section class="hero">
    <div class="hero-content">
      <h1>
        Monitor your
        <span class="rotating-text-wrapper">
          <span class="rotating-text" id="rotating-text">Claude Code</span>
        </span>
        <br/>agents at work
      </h1>
      <p class="hero-desc">
        Watch AI coding agents work on your code. Manage Git, review changes, and chat with agents — all in one place.
      </p>
      <div class="hero-actions">
        <a href="#" class="btn btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
          Download for macOS
        </a>
        <a href="https://github.com/dunkbing/oshin" target="_blank" class="btn btn-secondary">
          View on GitHub
        </a>
      </div>
      <p class="hero-note">Free and open source · macOS 14.0+</p>
    </div>

    <!-- Screenshot -->
    <div class="screenshot-wrapper">
      <img src="/sc1.webp" alt="Oshin app screenshot" class="screenshot" />
    </div>
  </section>

  <!-- Agent Logos -->
  <section class="agents-section">
    <p class="agents-label">Works with</p>
    <div class="agents-logos">
      <span class="agent-name">Claude Code</span>
      <span class="divider">·</span>
      <span class="agent-name">Codex</span>
      <span class="divider">·</span>
      <span class="agent-name">Gemini CLI</span>
    </div>
  </section>

  <!-- Screenshots Gallery -->
  <section class="gallery">
    <div class="gallery-grid">
      <img src="/sc2.webp" alt="Git integration" class="gallery-img" />
      <img src="/sc3.webp" alt="Chat interface" class="gallery-img" />
      <img src="/sc4.webp" alt="Terminal" class="gallery-img" />
    </div>
  </section>

  <!-- Features -->
  <section class="features" id="features">
    <div class="features-grid">
      <div class="feature-card">
        <h3>Multi-Agent Monitoring</h3>
        <p>Watch multiple AI agents work simultaneously with real-time status updates.</p>
      </div>
      <div class="feature-card">
        <h3>Git Integration</h3>
        <p>View diffs, stage changes, commit, and manage branches without leaving the app.</p>
      </div>
      <div class="feature-card">
        <h3>Integrated Terminal</h3>
        <p>Powered by Ghostty. Run commands and manage multiple sessions per project.</p>
      </div>
      <div class="feature-card">
        <h3>Chat Interface</h3>
        <p>Send instructions and guide agent work through ACP protocol support.</p>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-inner">
      <a href="/" class="logo">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="logo-icon">
          <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="2"/>
          <circle cx="9" cy="12" r="2" fill="currentColor"/>
          <circle cx="15" cy="12" r="2" fill="currentColor"/>
          <path d="M9 16c0 0 1.5 2 3 2s3-2 3-2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
        <span>Oshin</span>
      </a>
      <div class="footer-links">
        <a href="https://github.com/dunkbing/oshin" target="_blank">GitHub</a>
        <a href="https://github.com/dunkbing/oshin/releases" target="_blank">Releases</a>
      </div>
    </div>
  </footer>
</Layout>

<script>
  const agents = ['Claude Code', 'Codex', 'Gemini CLI'];
  let currentIndex = 0;
  const rotatingText = document.getElementById('rotating-text');

  function rotateText() {
    if (!rotatingText) return;
    rotatingText.classList.add('fade-out');
    setTimeout(() => {
      currentIndex = (currentIndex + 1) % agents.length;
      rotatingText.textContent = agents[currentIndex];
      rotatingText.classList.remove('fade-out');
    }, 300);
  }

  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    setInterval(rotateText, 2500);
  }
</script>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(9, 9, 11, 0.8);
    border-bottom: 1px solid var(--border-subtle);
  }

  @media (prefers-color-scheme: light) {
    .nav { background: rgba(250, 250, 250, 0.8); }
  }

  .nav-inner {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .nav-link-github {
    display: flex;
    padding: 0.5rem;
    border-radius: 6px;
    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .nav-link-github:hover {
    color: var(--text-primary);
  }

  .hero {
    max-width: 1000px;
    margin: 0 auto;
    padding: 7rem 1rem 4rem;
    text-align: center;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .rotating-text-wrapper {
    display: inline-block;
    min-width: 220px;
  }

  .rotating-text {
    color: var(--accent-blue);
    transition: opacity 0.3s ease;
  }

  .rotating-text.fade-out {
    opacity: 0;
  }

  .hero-desc {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .hero-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-note {
    margin-top: 1rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--text-primary);
    color: var(--bg-primary);
  }

  .btn-primary:hover {
    opacity: 0.9;
  }

  .btn-secondary {
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    color: var(--text-primary);
  }

  .btn-secondary:hover {
    border-color: var(--text-muted);
  }

  .screenshot-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .screenshot {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 0 0 1px var(--border), 0 20px 40px -12px rgba(0, 0, 0, 0.3);
  }

  .agents-section {
    padding: 3rem 1rem;
    text-align: center;
  }

  .agents-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .agents-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .agent-name {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .divider {
    color: var(--text-muted);
  }

  .gallery {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem 4rem;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .gallery-img {
    width: 100%;
    border-radius: 8px;
    box-shadow: 0 0 0 1px var(--border);
    transition: transform 0.2s;
  }

  .gallery-img:hover {
    transform: scale(1.02);
  }

  .features {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem 4rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .feature-card {
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 10px;
  }

  .feature-card h3 {
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .feature-card p {
    font-size: 0.85rem;
    line-height: 1.5;
    color: var(--text-secondary);
  }

  .footer {
    border-top: 1px solid var(--border);
    padding: 2rem 1rem;
  }

  .footer-inner {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    font-size: 0.85rem;
    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 5rem 1rem 2rem;
    }

    .hero h1 {
      font-size: 1.5rem;
    }

    .rotating-text-wrapper {
      min-width: auto;
      display: block;
    }

    .hero-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }

    .agents-logos {
      gap: 0.5rem;
    }

    .footer-inner {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
