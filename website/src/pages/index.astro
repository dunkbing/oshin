    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.2s;
  }

  .feature-card:hover {
    background: var(--bg-card);
    border-color: var(--text-muted);
    transform: translateY(-2px);
