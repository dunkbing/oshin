  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    color: var(--text-primary);
  }

  .logo-icon {
    color: var(--text-primary);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
